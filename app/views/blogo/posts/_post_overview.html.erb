<section class="blogo-article article-overview">
  <%= render partial: 'blogo/posts/post_header', locals: {post: post} %>

  <div class="content">
    <%= raw post_overview(post) %>
  </div>

  <%= link_to t('user.read_post'), blogo_post_path(post), class: 'pure-button button-secondary' %>
</section>
